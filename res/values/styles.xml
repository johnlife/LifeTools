<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LightTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- colored holo -->
        <item name="android:buttonStyle">@style/ButtonLightTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonLightTheme</item>
        <item name="android:editTextBackground">@drawable/lighttheme_edit_text_holo_light</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLightTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/lighttheme_btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/lighttheme_btn_radio_holo_light</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLightTheme</item>

        <!-- my custom -->
        <item name="android:windowBackground">@drawable/activity_background</item>
    </style>

    <style name="panel">
        <item name="android:background">@drawable/panel_clickable</item>
        <item name="android:layout_marginBottom">@dimen/inset_margin</item>
        <item name="android:padding">@dimen/panel_padding</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="panelSelectable" parent="panel">
        <item name="android:padding">@null</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">@dimen/panel_padding</item>
        <item name="android:paddingRight">@dimen/panel_padding</item>
        <item name="android:paddingBottom">@dimen/panel_padding</item>
    </style>

    <!-- colored holo -->
    <style name="ButtonLightTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_default_light</item>
        <item name="android:paddingTop">@dimen/inset_margin</item>
        <item name="android:paddingBottom">@dimen/inset_margin</item>
        <item name="android:paddingRight">@dimen/inset_margin</item>
        <item name="android:paddingLeft">@dimen/panel_padding</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="ImageButtonLightTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/btn_default_light</item>
    </style>

    <style name="AutoCompleteTextViewLightTheme" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/lighttheme_list_selector_holo_light</item>
        <item name="android:background">@drawable/lighttheme_edit_text_holo_light</item>
    </style>

    <style name="ProgressBarLightTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/lighttheme_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/lighttheme_progress_indeterminate_horizontal_holo_light</item>
    </style>

</resources>